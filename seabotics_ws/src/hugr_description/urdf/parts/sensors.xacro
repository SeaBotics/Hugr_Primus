<?xml version="1.0"?>
<robot xmlns:xacro="http://www.ros.org/wiki/xacro">
  <xacro:macro name="sensors" params="parent">
    <!-- IMU/GNSS stub pÃ¥ toppen av skroget -->
    <link name="imu_link">
      <visual>
        <origin xyz="0 0 0.15" rpy="0 0 0"/>
        <geometry><box size="0.05 0.05 0.02"/></geometry>
        <material name="grey"><color rgba="0.5 0.5 0.5 1.0"/></material>
      </visual>
    </link>
    <joint name="imu_joint" type="fixed">
      <parent link="${parent}"/>
      <child link="imu_link"/>
      <origin xyz="0 0 0.15" rpy="0 0 0"/>
    </joint>
  </xacro:macro>
</robot>
